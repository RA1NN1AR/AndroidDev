<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow>

        <EditText
            android:id="@+id/txt_Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:cursorVisible="false"
            android:text="0" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_Num7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Num8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Num9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnCalcmode_onClick"
            android:text="ร"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/btn_Backspace"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnBackspace_onClick"
            android:scaleType="centerInside"
            android:src="@drawable/delete" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_Num4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Num5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Num6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnCalcmode_onClick"
            android:text="รท"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Clear"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnClear_onClick"
            android:text="C"
            android:textSize="40sp" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_Num1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Num2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_Num3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnNumber_onClick"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnCalcmode_onClick"
            android:text="-"
            android:textSize="40sp" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_Num0"
            android:layout_height="75dp"
            android:layout_span="2"
            android:onClick="btnNumber_onClick"
            android:text="0"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnDot_onClick"
            android:text="."
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_span="1"
            android:onClick="btnCalcmode_onClick"
            android:text="+"
            android:textSize="40sp" />
        <Button
            android:id="@+id/btn_is"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="="
            android:textSize="40sp" />
    </TableRow>
</TableLayout>
